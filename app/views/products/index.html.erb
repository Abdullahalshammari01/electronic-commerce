<h1 class="display-4 mb-4">Products</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @products.each do |product| %>
    <div class="col">
      <div class="card h-100 shadow-sm">
        <div class="row g-0 h-100">
          <!-- Image Column -->
          <div class="col-md-4">
            <% if product.image.attached? %>
              <%= image_tag product.image, class: "img-fluid h-100", style: "object-fit: cover;" %>
            <% end %>
          </div>

          <!-- Content Column -->
          <div class="col-md-8">
            <div class="card-body d-flex flex-column h-100">
              <!-- Header with Name and Expand Button -->
              <div class="d-flex justify-content-between align-items-start mb-2">
                <h5 class="card-title mb-0">
                  <%= link_to product.name, product, class: "text-decoration-none text-dark fw-bold" %>
                </h5>
                <button class="btn btn-sm btn-outline-secondary" 
                        type="button" 
                        data-bs-toggle="collapse" 
                        data-bs-target="#desc-<%= product.id %>"
                        aria-expanded="false">
                  Read More
                </button>
              </div>

              <!-- Expandable Description -->
              <div class="collapse" id="desc-<%= product.id %>">
                <div class="text-muted small mb-2">
                  <%= product.description %>
                </div>
              </div>

              <!-- Price and Buttons -->
              <div class="mt-auto">
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-primary fw-bold">$<%= number_with_precision(product.price, precision: 2) %></span>
                  <div class="btn-group">
                    <%= button_to 'Add to Cart', cart_path(product_id: product.id), 
                                method: :post, 
                                class: "btn btn-sm btn-primary" %>
                    <%= link_to 'View', product_path(product), 
                              class: "btn btn-sm btn-outline-secondary" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>